# ==============================================================================
# STICK FIGURE VIDEO PLATFORM - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# APPLICATION SETTINGS
# ------------------------------------------------------------------------------
APP_NAME="Stick Figure Animator"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Set to false in production for security
# APP_DEBUG=false

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ------------------------------------------------------------------------------
# For MySQL/MariaDB
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=stick_figure_animator
DB_USERNAME=root
DB_PASSWORD=

# For SQLite (development only)
# DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# ------------------------------------------------------------------------------
# CACHE & SESSION
# ------------------------------------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# For production, use Redis for better performance:
# CACHE_DRIVER=redis
# QUEUE_CONNECTION=redis
# SESSION_DRIVER=redis

# ------------------------------------------------------------------------------
# REDIS (Optional - for caching and queues in production)
# ------------------------------------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

# ------------------------------------------------------------------------------
# MAIL CONFIGURATION (For notifications and password resets)
# ------------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# For production, use a real mail service:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your_username
# MAIL_PASSWORD=your_password
# MAIL_ENCRYPTION=tls

# ------------------------------------------------------------------------------
# SENDPULSE EMAIL NOTIFICATIONS (OPTIONAL)
# ------------------------------------------------------------------------------
# Get your API credentials from: https://login.sendpulse.com/settings/#api
# If not configured, the system will use Laravel's default mail settings
# Used for sending video completion and failure notifications

SENDPULSE_API_ID=
SENDPULSE_API_SECRET=

# ------------------------------------------------------------------------------
# AWS S3 (Optional - for cloud storage)
# ------------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ------------------------------------------------------------------------------
# PUSHER (Optional - for real-time features)
# ------------------------------------------------------------------------------
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ------------------------------------------------------------------------------
# VITE (Frontend build tool)
# ------------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ==============================================================================
# REQUIRED API KEYS FOR VIDEO GENERATION
# ==============================================================================

# ------------------------------------------------------------------------------
# OPENAI API (REQUIRED)
# ------------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
# This is used for:
# - Text generation (GPT models)
# - Image generation (DALL-E 3)
# - Voice generation (TTS)
OPENAI_API_KEY=

# Optional: Use a different base URL for OpenAI-compatible APIs
# OPENAI_BASE_URL=https://api.openai.com/v1

# ------------------------------------------------------------------------------
# STRIPE PAYMENT GATEWAY (REQUIRED for payments)
# ------------------------------------------------------------------------------
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_... and sk_test_...) for development
# Use live keys (pk_live_... and sk_live_...) for production

STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# Optional: Stripe webhook secret for payment verification
# STRIPE_WEBHOOK_SECRET=

# ------------------------------------------------------------------------------
# PAYSTACK PAYMENT GATEWAY (OPTIONAL - Alternative to Stripe)
# ------------------------------------------------------------------------------
# Get your keys from: https://dashboard.paystack.com/#/settings/developers
# Popular in Africa and other regions

PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# Optional: Paystack webhook secret
# PAYSTACK_WEBHOOK_SECRET=

# ==============================================================================
# OPTIONAL API KEYS (For additional features)
# ==============================================================================

# ------------------------------------------------------------------------------
# DEEPSEEK API (OPTIONAL - Cheaper alternative to GPT)
# ------------------------------------------------------------------------------
# Get your API key from: https://platform.deepseek.com/
# Used for budget-friendly text generation
# DEEPSEEK_API_KEY=

# ------------------------------------------------------------------------------
# SEGMIND API (OPTIONAL - Cheaper alternative to DALL-E)
# ------------------------------------------------------------------------------
# Get your API key from: https://www.segmind.com/
# Used for budget-friendly image generation
# SEGMIND_API_KEY=

# ------------------------------------------------------------------------------
# ELEVENLABS API (OPTIONAL - High-quality voice generation)
# ------------------------------------------------------------------------------
# Get your API key from: https://elevenlabs.io/
# Used for premium voice generation
# ELEVENLABS_API_KEY=

# ==============================================================================
# PLATFORM CONFIGURATION
# ==============================================================================

# ------------------------------------------------------------------------------
# VIDEO GENERATION SETTINGS
# ------------------------------------------------------------------------------
# Default number of images per second (0.33 = 1 image every 3 seconds)
DEFAULT_IMAGES_PER_SECOND=0.33

# Video cleanup interval in hours (default: 24 hours)
VIDEO_CLEANUP_INTERVAL=24

# Cleanup task frequency (hourly, daily, weekly, monthly)
CLEANUP_TASK_FREQUENCY=hourly

# ------------------------------------------------------------------------------
# CREDIT SYSTEM
# ------------------------------------------------------------------------------
# Free credits given to new users on registration
FREE_CREDITS_ON_SIGNUP=100

# Credit packages (credits:price in USD)
# CREDIT_PACKAGE_STARTER=100:9.99
# CREDIT_PACKAGE_CREATOR=500:39.99
# CREDIT_PACKAGE_PRO=1000:69.99
# CREDIT_PACKAGE_ENTERPRISE=5000:299.99

# ------------------------------------------------------------------------------
# AI MODEL PRICING (in credits)
# ------------------------------------------------------------------------------
# Text Generation Models
TEXT_MODEL_GPT4_MINI_COST=20
TEXT_MODEL_GPT4_NANO_COST=5
TEXT_MODEL_DEEPSEEK_COST=5

# Image Generation Models (per image)
IMAGE_MODEL_DALLE3_COST=8
IMAGE_MODEL_SEGMIND_COST=2

# Voice Generation Models
VOICE_MODEL_TTS_STANDARD_COST=3
VOICE_MODEL_TTS_HD_COST=10

# ==============================================================================
# PRODUCTION SETTINGS
# ==============================================================================

# For production deployment:
# 1. Set APP_ENV=production
# 2. Set APP_DEBUG=false
# 3. Generate new APP_KEY: php artisan key:generate
# 4. Use live API keys (not test keys)
# 5. Configure proper database credentials
# 6. Set up Redis for caching and queues
# 7. Configure proper mail server
# 8. Set up SSL certificate (HTTPS)
# 9. Configure queue worker (Supervisor)
# 10. Set up cron jobs for scheduled tasks

# ==============================================================================
# SECURITY NOTES
# ==============================================================================
# - Never commit .env file to version control
# - Use strong, unique passwords for database
# - Rotate API keys regularly
# - Use test keys for development
# - Enable 2FA on all API provider accounts
# - Monitor API usage and costs
# - Set up rate limiting in production
# - Use HTTPS in production
# - Keep Laravel and dependencies updated

